{
  "name": "vertex-sdk-monorepo",
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "clean": "npx lerna run clean",
    "build": "npx lerna run build",
    "publish": "npx lerna publish --force-publish --no-private",
    "dev": "npx lerna run dev",
    "lint": "eslint './**/*.ts' --fix && prettier --write './**/*.{ts,graphql}'",
    "gen-typedoc": "npx typedoc",
    "link-local": "lerna exec -- yarn link",
    "unlink-local": "lerna exec -- yarn unlink"
  },
  "lint-staged": {
    "*.{ts,graphql}": "yarn lint"
  },
  "devDependencies": {
    "@types/node": "^18.6.5",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lerna": "^5.4.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.10",
    "typedoc-plugin-extras": "^2.3.0",
    "typedoc-plugin-missing-exports": "^1.0.0",
    "typescript": "^4.7.4"
  }
}
